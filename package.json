{
  "name": "backend",
  "version": "1.0.0",
  "description": "A starter Node.js + Express backend with PostgreSQL. This repository contains a minimal, opinionated setup for building REST APIs with user authentication, environment-driven configuration, and database migrations/seeding guidance.",
  "main": "index.js",
  "scripts": {
    "start": "nodemon src/server.js",
    "lint": "eslint . --ext .js,.ts",
    "lint-fix": "eslint . --ext .js,.ts --fix",
    "format": "prettier --write .",
    "prepare": "husky install"
  },
  "imports": {
    "#root/*": "./src/*",
    "#config": "./src/config/index.js",
    "#controllers": "./src/controllers/index.js",
    "#routes": "./src/routes/index.js",
    "#middlewares": "./src/middlewares/index.js",
    "#models": "./src/models/index.js",
    "#utils": "./src/utils/index.js",
    "#services": "./src/services/index.js",
    "#db": "./src/db/index.js"
  },
  "keywords": [],
  "type": "module",
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "jsonwebtoken": "^9.0.3",
    "nodemailer": "^7.0.11",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "husky": "^8.0.0",
    "lint-staged": "^16.2.7",
    "nodemon": "^3.1.11",
    "prettier": "^3.7.4"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
